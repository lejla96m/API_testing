		{
			"name": "Generate Auth Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"tests[\"Validating Status Code\"] = responseCode.code == 201;\r",
							"tests[\"Validating token presence\"] = responseBody.has(\"api_token\");"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n     \"email\" : \"{{email}}\" ,\r\n     \"password\" : \"{{password}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://demo.placelab.com/api/v2/sessions",
					"protocol": "https",
					"host": [
						"demo",
						"placelab",
						"com"
					],
